{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file for pybind11",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-I${workspaceFolder}/eigen/",
				"-fPIC",
				"-I/usr/include/python3.10",
				"-I/home/daniel/Code/Interacting_Maps_cpp/.venv/lib/python3.10/site-packages/pybind11/include",
				"-g",
				"${file}",
				"-L/usr/lib/x86_64-linux-gnu/",
				"-o",
				"${workspaceFolder}/src/${fileBasenameNoExtension}.cpython-310-x86_64-linux-gnu.so",
				"-lopenblas",
				"-lpthread",
				"-llapacke",
				"-Wall",
				"-Wextra",
				"-shared",
				"-O3",
				"-march=native",
				"-fopenmp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"label": "C/C++: Build with custom shell script for pybind11 (outdated)",
			"type": "shell",
			"command": "${workspaceFolder}/.vscode/build.sh",
			"args": [
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Build task using custom build script"
		},
